@gsap:registry=https://npm.greensock.com

# Use strict mode to prevent hoisting and type conflicts
shamefully-hoist=false
strict-peer-dependencies=false

# Prevent React from being hoisted to root to support multiple React versions
# Each workspace can use its own React version (18 vs 19)
public-hoist-pattern[]=!react
public-hoist-pattern[]=!react-dom
public-hoist-pattern[]=!react/jsx-runtime
public-hoist-pattern[]=!react-dom/server
public-hoist-pattern[]=!react/jsx-dev-runtime

# Prevent @types/react from being hoisted to support multiple React type versions
# This allows each workspace to use its own @types/react version
public-hoist-pattern[]=!@types/react
public-hoist-pattern[]=!@types/react-dom