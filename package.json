{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "prepare": "husky install",
    "format": "prettier --write './apps/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@repo/eslint-config-custom": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "eslint": "^9.33.0",
    "husky": "^8.0.3",
    "lint-staged": "16.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@9.9.0",
  "pnpm": {
    "overrides": {
      "docs@1.0.0>@types/react": "18.2.46",
      "docs@1.0.0>@types/react-dom": "18.2.18",
      "docs-v2@1.0.0>@types/react": "19.0.1",
      "docs-v2@1.0.0>@types/react-dom": "19.0.2"
    }
  },
  "lint-staged": {
    "*.rs": "rustfmt --edition 2021",
    "**/*.{ts,tsx,js,jsx,json,md}": "prettier --write",
    "!**/*.hbs": "echo 'Skipping Handlebars template files'"
  }
}
